<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('../partials/head.ejs', {title: 'producto'}) %>

    <body>
        <!-- Header -->
        <%- include('../partials/headerNavbar.ejs') %>
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h3 class="products-title">Detalle del producto:
                            <%= products.id %>
                        </h3>
                    </div>
                </div>
                <div class="product-detail">
                    <div class="row">
                        <div class="col-12 col-lg-8">

                            <img src="/images/avatars/<%= products.image %>" class="responsive">

                        </div>
                        <div class="col-12 col-lg-4">
                            <article class="product-detail-info">
                                <p class="product-detail-description">
                                    <%= products.name %>

                                </p>
                                <p>Precio:$
                                    <%= products.price %>
                                </p>

                                <ul class="actions-list">
                                    <li>
                                        <i class="fas fa-credit-card"></i>
                                        <p>Pag√° en 12 cuotas sin interes</p>
                                    </li>
                                    <li>
                                        <i class="fas fa-store"></i>
                                        <p>Retiro gratis en locales del vendedor</p>
                                    </li>
                                </ul>

                                <a href="/carrito" class="buy-now-button">COMPRAR AHORA</a>
                            </article>
                        </div>


                        <!--Borrar Producto -->

                        <form action="/productos/borrar/<%= products.id %>?_method=DELETE" method="POST">
                            <button type="submit">BORRAR</button>
                        </form>

                        <form action="/productos/editar/<%= products.id %>?_method=PUT" method="POST">
                            <button><a href="/productos/editar/<%= products.id %>">Modificar</a></button>
                        </form>

                        <div class="col-12 container-listaProductos responsive">


                            <a href="/todosLosProductos" class="btn btn-primary btn-sm button-volver" role="button" aria-pressed="true">Volver</a>


                        </div>
                    </div>
                </div>
            </div>
    </body>
    <!-- footer -->
    <%- include('../partials/footer.ejs') %>
        <!-- /footer -->