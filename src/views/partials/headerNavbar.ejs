            <!--Link a Ingresar Registrar visible a partir de md-->
            <div class="col-md-3  d-none d-md-block align-self-start">

                <ul class="navbar-nav ml-auto align-items-center ">
                    
                 
                        <% if (isLogged) { %>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="/images/usersAvatars/<%= user.image %>" width="40" style="border-radius: 100%;">
