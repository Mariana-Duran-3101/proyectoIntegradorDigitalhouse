                <a href= "/usuarios/carrito"><i class="fas fa-cart-plus  "style="font-size: 24px"></i><span class="ml-1 badge badge-info" style="font-size: 12px"><%= cartQty %> </span></a>
            </div>
                <% } else { %>
            <div class="col-3 align-self-start  d-flex justify-content-end mt-2 pt-4 col-md-2">
                <a href= "/usuarios/ingresar"><i class="fas fa-cart-plus "style="font-size:24px"></i><span class="ml-1 badge badge-info" style="font-size: 12px"><%= cartQty %> </span></a>
            </div>
